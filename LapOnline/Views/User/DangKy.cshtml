@model LapOnline.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    tr {
        height: 40px;
    }
</style>
<h4 style ="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <table align ="center">
    <h2 style ="text-align:center"> ĐĂNG KÝ THÀNH VIÊN</h2>
        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <tr>
                <td width="100" height="50">Họ tên:</td>
                <td height="50">@Html.TextBoxFor(s => s.HoTenKH)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er1"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Địa chỉ:</td>
                <td height="50">@Html.TextBoxFor(s => s.DiaChiKH)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er2"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Điện thoại:</td>
                <td height="50">@Html.TextBoxFor(s => s.DienThoaiKH)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er3"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Tên:</td>
                <td height="50">@Html.TextBoxFor(s => s.TenDN)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er4"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Mật khẩu:</td>
                <td height="50">@Html.PasswordFor(s => s.MatKhau)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er5"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Ngày sinh:</td>
                <td height="50"><input type="date" name="NgaySinh" /> </td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er6"]</span></td>

            </tr>
            <tr>
                <td width="100" height="50">Giới tính:</td>
                <td height="50" style="display: flex; justify-content: space-evenly; align-items:center">
                    <span>@Html.RadioButtonFor(s => s.GioiTinh, "False") Nữ</span>
                    <span>@Html.RadioButtonFor(s => s.GioiTinh, "True") Nam</span>
                </td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er7"]</span></td>
            </tr>
            <tr>
                <td height="50" width="100">Email:</td>
                <td height="50">@Html.TextBoxFor(s => s.Email)</td>
                <td><span class="text-danger" style="font-size:12px"> @ViewData["er8"]</span></td>

            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng ký" />
                    <input type="reset" value="Xóa Thông Tin" />
                </td>
            </tr>
        }
        </table>

